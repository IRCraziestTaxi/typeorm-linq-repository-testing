{
  "name": "typeorm-linq-repository-testing",
  "version": "2.0.2",
  "description": "Testing helpers for typeorm-linq-repository.",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "tsc": "tsc -d --project ./tsconfig.build.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IRCraziestTaxi/typeorm-linq-repository-testing.git"
  },
  "keywords": [
    "typeorm",
    "linq",
    "typeorm-linq-repository",
    "test",
    "unit",
    "test"
  ],
  "author": "IRCraziestTaxi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IRCraziestTaxi/typeorm-linq-repository-testing/issues"
  },
  "homepage": "https://github.com/IRCraziestTaxi/typeorm-linq-repository-testing#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-simple-nameof": "^1.3.1",
    "typeorm": "^0.3.19",
    "typeorm-linq-repository": "^2.0.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typeorm": "^0.3.19",
    "typeorm-linq-repository": "^2.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node"
  },
  "files": [
    "LICENSE",
    "package.json",
    "dist/**"
  ]
}
